        "class pelicula:\n",
        "  def __init__(self,titulo,director,genero,duracion):\n",
        "  self.titulo = titulo\n",
        "  self.director = director\n",
        "  self.genero = genero\n",
        "  self.duracion = duracion\n",
        "  \n",
        "  def get_titulo(self):\n",
        "      return self.titulo\n",
        "  def get_director(self):\n",
        "      return self.director\n",
        "  def get_genero(self):\n",
        "      return self.genero\n",
        "  def get_duracion(self):\n",
        "      return self.duracion\n",
        "  \n",
        "  def mostrarPelicula(self):\n",
        "      print(\"\\ntitulo: \"+ self.gettitulo()+ \"\\ndirector: \"+ self.getdirector()+ \"\\ngenero: \"+ self.getgenero()+ \"\\nduracion: \"+ str(self.getduracion()) )\n",
        "\n",
        "titulo=input(\"ingrese titulo de la pelicula: \") \n",
        "director=input(\"ingrese el director de la pelicula: \")\n",
        "genero=input(\"ingrese genero de la pelicula: \")\n",
        "duracion=input(\"ingrese duracion de la pelicula: \")\n",
        "\n",
        "pelicula=pelicula(titulo,director,genero,duracion)\n",
        "print(pelicula)\n",
        "\n",
        "\n"
