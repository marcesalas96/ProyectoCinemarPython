        "class butaca:\n",
        "  def __init__(self,fila,numero,sala,reservado):\n",
        "    self.fila= fila\n",
        "    self.numero= numero\n",
        "    self.sala= sala\n",
        "    self.reservado= reservado \n",
        "\n",
        "def get_fila(self):\n",
        "  return self.fila\n",
        "def get_numero(self):\n",
        "  return self.numero\n",
        "def get_sala(self):\n",
        "  return self.sala\n",
        "def get_reservado(self):\n",
        "  return self.reservado\n",
        "\n",
        "def mostrarbutaca(self):\n",
        "  print(\"\\nFila: \"+str(self.getfila())+ \"\\nNumero: \"+str(self.getnumero())+ \"\\nSala: \"+str(self.getsala())+ \"\\nReservado: \"+str(self.getreservado))\n",
        "\n",
        "fila=input(\"ingrese numero de butaca: \")\n",
        "numero=input(\"ingrese numero de butaca: \")\n",
        "sala=input(\"ingrese numero de sala: \")\n",
        "reservado=input(\"ingrese dia de reserva: \")\n",
        "\n"
